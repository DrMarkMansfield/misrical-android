<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<TableLayout android:id="@+id/tableLayout1"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:stretchColumns="0,1,2,3">
		<TableRow>
			<Button android:text="@string/set_gregorian_label" android:id="@+id/setGregorianButton"
				android:layout_width="0dp" android:layout_weight="5"/>
			<Button android:text="@string/set_misri_label" android:id="@+id/setMisriButton"
				android:layout_width="0dp" android:layout_weight="5"/>
			<Button android:text="@string/DayMinus" android:id="@+id/dayMinusButton"
				android:layout_width="0dp" android:layout_weight="5"/>
			<Button android:text="@string/DayPlus" android:id="@+id/dayPlusButton"
				android:layout_width="0dp" android:layout_weight="5"/>
			<Button android:text="@string/Today" android:id="@+id/todayButton"
				android:layout_width="0dp" android:layout_weight="5"/>
		</TableRow>
	</TableLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
	    <Button android:text="@string/Su" style="@style/notTodayButton" android:id="@+id/sunButton"/>
		<Button android:text="@string/Mo" style="@style/notTodayButton" android:id="@+id/monButton"/>
		<Button android:text="@string/Tu" style="@style/notTodayButton" android:id="@+id/tueButton"/>
		<Button android:text="@string/We" style="@style/notTodayButton" android:id="@+id/wedButton"/>
		<Button android:text="@string/Th" style="@style/notTodayButton" android:id="@+id/thuButton"/>
		<Button android:text="@string/Fr" style="@style/notTodayButton" android:id="@+id/friButton"/>
		<Button android:text="@string/Sa" style="@style/notTodayButton" android:id="@+id/satButton"/>
	</LinearLayout>
	<RelativeLayout android:id="@+id/relativeLayout1"
		android:layout_height="wrap_content" android:layout_width="wrap_content">
		<ImageView android:layout_alignParentRight="true"
			android:scaleType="fitXY" android:padding="10dp" android:src="@drawable/arr2"
			android:id="@+id/arrow_icon_mecca" android:layout_height="125dip"
			android:adjustViewBounds="true" android:layout_width="125dip"></ImageView>
		<TextView android:text="@string/mecca" android:textSize="12sp"
			android:textStyle="bold" android:id="@+id/arrow_label_mecca"
			android:gravity="center" android:padding="5dip"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_below="@+id/arrow_icon_mecca"
			android:layout_alignLeft="@+id/arrow_icon_mecca"
			android:layout_alignRight="@+id/arrow_icon_mecca"></TextView>
		<ImageView android:scaleType="fitXY" android:padding="10dp"
			android:src="@drawable/arr2" android:id="@+id/arrow_icon_north"
			android:layout_height="125dip" android:adjustViewBounds="true"
			android:layout_width="125dip" android:layout_toLeftOf="@+id/arrow_icon_mecca"
			android:layout_alignTop="@+id/arrow_icon_mecca"
			android:layout_alignBottom="@+id/arrow_icon_mecca"></ImageView>
		<TextView android:text="@string/north" android:textSize="12sp"
			android:textStyle="bold" android:layout_height="wrap_content"
			android:id="@+id/northLabel" android:gravity="center"
			android:padding="5dip" android:layout_width="fill_parent"
			android:layout_below="@+id/arrow_icon_north"
			android:layout_alignLeft="@+id/arrow_icon_north"
			android:layout_alignRight="@+id/arrow_icon_north"></TextView>
		<TextView android:textSize="16sp" android:layout_below="@+id/convertedDate"
			android:layout_marginTop="15dip" android:id="@+id/dateGregorian"
			android:padding="5dip" android:layout_alignParentLeft="true"
			android:layout_height="wrap_content" android:layout_width="wrap_content"/>
		<TextView android:textSize="16sp" android:id="@+id/convertedDate"
			android:layout_marginTop="15dip" android:padding="5dip"
			android:layout_alignParentLeft="true" android:layout_height="wrap_content"
			android:layout_width="wrap_content"/>

	    <TextView
	        android:id="@+id/eventText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/northLabel"
	        android:layout_alignParentLeft="true"
	        android:maxWidth="300sp"
	        android:paddingLeft="5dip"
	        android:textColor="@color/monthListNumber"
	        android:textSize="14sp" />

	</RelativeLayout>
	<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:gravity="bottom">
  	<TableLayout android:id="@+id/bearingLayout"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:stretchColumns="1" android:paddingLeft="5dip" android:paddingRight="5dip">
		<TableRow>
			<TextView android:textSize="14sp" android:layout_marginTop="15dip"
				android:id="@+id/bearingMode" android:layout_height="wrap_content"
				android:layout_width="wrap_content" 
				android:gravity="right" android:text="@string/auto"/>
			<TextView android:text="@string/bearing_number_label" android:textSize="14sp"
				android:id="@+id/bearing_text" android:layout_marginTop="15dip"
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:gravity="right"
				android:layout_marginRight="1dip"/>
			<TextView android:textSize="14sp" android:padding="1dip"
				android:id="@+id/bearing" android:layout_height="wrap_content"
				android:layout_width="wrap_content" android:layout_marginTop="15dip"
				android:gravity="right" android:minWidth="7dip" android:text="@string/auto"/>
		  </TableRow> 
	</TableLayout>
	</LinearLayout>
</LinearLayout>
